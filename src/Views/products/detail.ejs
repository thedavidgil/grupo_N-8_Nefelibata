<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../partials/head") %>
    <link rel="stylesheet" href="/css/detalle_producto.css">
    <title>Productos - Nefelibata</title>


</head>

<body>



  <%- include("../partials/header") %>

    <main>

      <section class="detalle_producto">
        
        <div class="imagen_principal">
          <img src="/images/products/<%= product.product_images[0].image %>" alt="imagen principal">
        </div>

        <div class="detalle">
          <h2><%= product.product_name %></h2>
          <div class="price-per-unit">
            <p>$ <%= product.price %></p>
          </div>
          <p><%= product.description %></p>

          <form action="#" method="post">

            
            <!-- <div class="amount">
              <button type="submit"><i class="fa-solid fa-circle-minus"></i></button>
              <p>0</p>
              <button type="submit"><i class="fa-solid fa-circle-plus"></i></button>
            </div> -->
            <button class="comprar">AGREGAR AL CARRITO</button>
          </form>
          <% if (locals.isLogged) { %>
            <a href="/products/edit/<%= product.product_id %>"><button class="button1">Editar</button></a>
            <form action="/products/delete/<%= product.product_id %>">
                <button type="submit" class="button1">Eliminar</button>
            </form>
          <% } %> 
        
          <!-- Boton de eliminar y editar si el perfil del usuario es admin -->
          
          <!-- <div class="delete">
            <label for="delete"></label>
            <button type="reset"><i class="fa-solid fa-trash-can"></i></button>
          </div> -->
        </div>

      </section>


    </main>


    <%- include("../partials/footer") %>



</body>

</html>