<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head") %>
    <link rel="stylesheet" href="../css/styles_register.css">
    <title>Registro - Nefelibata</title>
</head>
<body>
    
    <%- include("../partials/header") %>

    <main>

        <div class="path">
            <p>Inicio></p>
            <p>Mi cuenta></p>
            <p>Crear Cuenta</p>
        </div>
        
        <p class="creating-account">CREA TU CUENTA</p>

        <p class="text-benefit">Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
 
    
         <div class="socialnetwork">
         <button type="submit">Crea Cuenta con <i class="fa-brands fa-facebook-square"></i>
            FACEBOOK</button>
        </div>


        <form action=" /users/register" method="POST" enctype="multipart/form-data" class="form1">

            <div class="control-formulario">
                <label for="firstName">Nombre</label>
                <input type="text" name="firstName" id="firstName" placeholder="Ej. Mario"
                 class="control" value="<%= locals.oldData ? oldData.firstName : null %>">
                 <% if(locals.errors && errors.firstName){ %> 
                    <div class="error">
                        <%= errors.firstName.msg %> 
                    </div>
                <% } %> 
            </div>
                
            <div class="control-formulario">
                <label for="lastName">Apellido</label>
                <input type="text" name="lastName" id="lastName" placeholder="Ej. Pérez" 
                class="control" value="<%= locals.oldData ? oldData.lastName : null %>">
                <% if(locals.errors && errors.lastName){ %> 
                    <div class="error">
                        <%= errors.lastName.msg %> 
                    </div>
                <% } %> 
            </div>

            <div class="control-formulario"> 
                <label for="email">Email</label>
                <input type="email" name="email" id="email" placeholder="Minombre@mail.com"
                class="control" value="<%= locals.oldData ? oldData.email : null %>">
                <% if(locals.errors && errors.email){ %> 
                    <div class="error">
                        <%= errors.email.msg %> 
                    </div>
                <% } %> 
            </div>

    
            <div class="control-formulario">    
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" placeholder="Máximo 8 carácteres" class="control">
            </div>
            <% if(locals.errors && errors.password){ %> 
                <div class="error">
                    <%= errors.password.msg %> 
                </div>
            <% } %> 

          

            
            <div class="control-formulario">
                <label>Imagen de perfil</label>
                <input type="file" name="userImage" class="control" >

                <% if(locals.errors && errors.userImage){ %> 
                    <div class="error">
                        <%= errors.userImage.msg %>
                        
                    </div>
                <% } %> 
            </div>



            <div class="button1">
              <button type="submit">Crear Cuenta</button>
            </div>
        </form>

        <p class="tenescuenta">¿Ya tenés cuenta?<a href="/users/login">Inicia sesión</a></p>
    </main>

    <%- include("../partials/footer") %>

    
</body>
</html>